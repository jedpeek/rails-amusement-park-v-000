<h1><%=@attraction.name%></h1>
<h3>Nausea Rating   :<%=@attraction.nausea_rating%></h3>
<h3>Happiness Rating:<%=@attraction.happiness_rating%></h3>
<h3>Tickets         :<%=@attraction.tickets%></h3>

<% if User.find(session[:user_id]).admin %>
  <%= link_to 'Edit Attraction', [:edit, @attraction] %></p>
<% else %>

  <form action="/rides" method="post">
    <%= tag(:input, type: "hidden", name: request_forgery_protection_token.to_s, value: form_authenticity_token) %>
    <%= tag(:input, type: "hidden", name: :user_id, value: User.find(session[:user_id]).id) %>
    <%= tag(:input, type: "hidden", name: :attraction_id, value: @attraction.id) %>
    <input class="btn btn-light" type="submit" value="Go on this ride">
  </form>
<% end %>
</form>
