<%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>

<div class="form-group">
  <%= f.label :name, "Select your name" %><br>
  <%= f.select(:name, user_name)%>
</div>

  <div class="form-group">
    <%= f.label :password, "Enter your password" %><br>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit  class:"btn btn-primary", id: "Sign In" %>
  </div>
  <% end %>
