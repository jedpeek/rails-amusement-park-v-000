<%= form_for :user do |f| %>
<div class="form-group">
  Name      : <%= f.text_field :name, class: "form-control" %><br />
</div>

<div class="form-group">
  Password  : <%= f.password_field :password, class: "form-control" %><br />
</div>

<div class="form-group">
  Tickets   : <%= f.text_field :tickets, class: "form-control" %><br />
</div>

<div class="form-group">
  Happiness : <%= f.text_field :happiness, class: "form-control" %><br />
</div>

<div class="form-group">
  Nausea    : <%= f.text_field :nausea, class: "form-control" %><br />
</div>

<div class="form-group">
  Height    : <%= f.text_field :height, class: "form-control" %><br />
</div>

<div class="form-group">
  <%= f.label :admin, "ADMIN Check box if you are a theme park owner" %>
  <%= f.check_box :admin, class: "form-check-input" %>
</div>

<div class="form-group">
  <%= f.submit class:"btn btn-primary", id: "Create User" %>
</div>
<% end %>
